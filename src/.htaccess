
<IfModule mod_headers.c> 
  # Set allow Access-Control-Allow-Origin header 
  Header set Access-Control- Allow -Origin "*"
  
  # Quitar el encabezado X-Powerered-By 
  Encabezado desarmado X-Powered-By
   Encabezado siempre desarmado X-Powered-By
 </IfModule>

<IfModule mod_rewrite.c> 
  RewriteEngine  activado
  
  # Redirección de solicitudes a index.html 
  RewriteCond  %{DOCUMENT_ROOT} %{REQUEST_URI} -f [OR] 
  RewriteCond  %{DOCUMENT_ROOT} %{REQUEST_URI} -d
   RewriteRule ^.*$ - [NC,L] 
  # Redirigir todo lo que no sea de archivo rutas a index.html 
  RewriteRule ^(?!.*\.).*$ /index.html [NC,L] 
</IfModule>

<IfModule mod_mime.c>
  
  ### INICIO Extraer de ASC 
  # Servir recursos con los tipos de medios adecuados (fka tipos MIME).
  
  # Intercambio de datos
  
  Aplicación AddType /atom+xml atom
   Aplicación AddType /json json map topojson
   Aplicación AddType /ld+json jsonld
   Aplicación AddType /rss+xml rss
   Aplicación AddType /geo+json geojson
   Aplicación AddType /rdf+xml rdf
   Aplicación AddType /xml xml
  
  #JavaScript

  
  AddType texto/javascript js mjs
  
  
  # Archivos de manifiesto
  
  Aplicación AddType /manifest+json webmanifest
   Aplicación AddType /x-web-app-manifest+json webapp
   AddType text/cache-manifest appcache
  
  
  # archivos multimedia
  
  Audio AddType /mp4 f4a f4b m4a
   Audio AddType /ogg oga ogg opus
   Imagen AddType /avif avif
